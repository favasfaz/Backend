    </header>
            

         

<div class="container-fluid mt-3 mb-3">
    <div class="row g-2">
        {{#each data}}
        <div class="col-md-4 d-flex " >
            <div class="card align-items-center" style="width: 380px ;">
                <div class="img-container">
                                       <div class="d-flex justify-content-center align-items-center p-2 first"> <span class="percent">-{{this.discount}}%</span>  </div> <img class="d-flex justify-content-center align-items-center "  src="/uploads/{{this.images.[0].img1}}" class="img-fluid">

                </div>
                <div class="product-detail-container">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">{{this.productName}}</h6> <span class="text-danger font-weight-bold">${{this.price}}</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <div class="ratings"> <i class="fa fa-star"></i> <span>4.5</span> </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-between"> <button class="btn btn-danger btn-block" style="margin-left: 5px" onclick="addToCart('{{this._id}}')"> To Cart</button> </div>
                </div>
            </div>
        </div>
       {{/each}}
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 

<script>
    function addToCart(proId){
    $.ajax({
        url:'/users/add-to-cart/'+proId,
        method:'get',
        success:(response)=>{
            // var x = document.getElementById("form1").value;
            if(response.status){
                $('#cart-count').html(response.count)
                alert('Item added to Cart')
            }
            else{
                alert('please login first')
            }
        }, 
        // error: function() {
        //     alert("Please login first");
        //   }
    })
}
</script>

