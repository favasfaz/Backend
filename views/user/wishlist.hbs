<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  function delWishlist(proId){

    swal({
        title: "Are you sure?",
        text: "YOu want to delete the Product",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {

      $.ajax({
        url:'/delete-wishlist/'+proId,
          method:'get',
        success:(response)=>{
            
            swal("Poof! Your product from  Wishlist has been deleted!", {
                            icon: "success",
                          });
                    location.reload()
        }
    })
          
        } else {
          swal("Your product is safe!");
        }
      });

  
}
function addToCart(proId){

   
    $.ajax({
        url:'/add-to-cart/'+proId,
        method:'get',
        success:(response)=>{
            if(response.status){
                $('#cart-count').html(response.count)
                swal("Good job!", "Item added to Cart", "success");
                           }
                           else{
                            swal( "dangerMode","please login first", "error");
                           }
                            
        }, 
        error: function(err) {
            alert("Please login first");
          }
    })
}
</script>


 

